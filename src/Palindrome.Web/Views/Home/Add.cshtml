@{
    ViewData["Title"] = "Add Palindrome";
    @model Palindrome.Web.ViewModels.PalindromeViewModel
}

<div class="py-3 text-center">
    <h1>Add Palindrome</h1>
</div>
<div class="py-3 bg-light">
    <div class="container">
        <form asp-action="Add" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label for="@Model.Text">Palindrome sentence</label>
                <input type="text" class="form-control" asp-for="@Model.Text" >
                <span asp-validation-for="@Model.Text" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mb-2">Add</button>
            <a asp-controller="Home" asp-action="Index" class="ml-2">Cancel</a>
        </form>
    </div>
</div>

