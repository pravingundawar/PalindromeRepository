@{
    ViewData["Title"] = "Home";
    @model Palindrome.Web.ViewModels.IndexViewModel
}

<div class="py-3 text-center">
    <h1>Palindromes</h1>
</div>

<div class="py-3 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <a asp-action="Add">Add new Palindrome</a>
            </div>
        </div>
        <div class="row mt-3">
            @if (Model.Data.Count() > 0)
            {
                @foreach (var palindrome in Model.Data)
                {
                   <partial name="_palindrome" model="palindrome" /> 

                }
            }
            else
            {
                <div class="col-md-4">
                    <div class="alert-info mt-5">No Palindromes found.</div>
                </div>
            }

        </div>
    </div>
</div>
